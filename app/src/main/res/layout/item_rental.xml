<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/film_title_textview"
            style="@style/default_header_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Academy Dinosour" />

        <TextView
            android:id="@+id/rental_date_textview"
            style="@style/default_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rented at: 19-6-2017" />

        <TextView
            android:id="@+id/rental_duration_left_textview"
            style="@style/default_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Days left to return this film: 4" />

    </LinearLayout>

</LinearLayout>